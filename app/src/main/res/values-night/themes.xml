<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BanglaFunnyStatus" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#111625</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="itemBackground">@color/white</item>
    </style>

    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/bangla_font</item>
    </style>


    <style name="TEXT_COLOR">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BACKGROUND">
        <item name="android:background">@color/black</item>
    </style>

    <style name="LAYOUT_BACKGROUND">
        <item name="android:background">@drawable/lay_bg_night</item>
    </style>

    <style name="TEXT_BACKGROUND">
        <item name="android:background">@drawable/text_bg_night</item>
    </style>

    <style name="ABOUT_MAIN">
        <item name="android:background">@drawable/about_main_night</item>
    </style>

    <style name="ABOUT_SECOUNDARY">
        <item name="android:background">@drawable/about_secoundary_night</item>
    </style>


</resources>